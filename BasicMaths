import java.util.Scanner;

class maths{
	public static void main(String[] args) {
		
		double x, y;
		String ans;
		
		Scanner in = new Scanner(System.in);
		System.out.println("Enter a number: ");
		x=in.nextFloat();
		System.out.println("Enter another number: ");
		y=in.nextFloat();
		System.out.println("Choose the letter for your desired action:");
		System.out.println("		A) Add");
		System.out.println("		B) Subtract");
		System.out.println("		C) Multiply");
		System.out.println("		D) Divide");
		System.out.println("		E) Power");
		System.out.println("		F) Factorial");
		ans=in.next().toLowerCase();
		
		if (ans.equals("a")){
		adding(x ,y);}
		
		if (ans.equals("c")){
		multiply(x ,y);}
		
		else if (ans.equals("b")){
			System.out.println("Subtract first number by second? Y/N");
			ans=in.next().toLowerCase();
			if (ans.equals("y")){
				subtract(x ,y);}
			else{
				subtractYfromX(x,y);}
		}
		
		else if (ans.equals("d")){
			System.out.println("Divide first number by second? Y/N");
			ans=in.next().toLowerCase();
			if (ans.equals("y")){
				divideXbyY(x,y);}
			else{
				divideYbyX(x,y);}
		}
		
		else if (ans.equals("e")){
			System.out.println("The first number to the power of the second? Y/N");
			ans=in.next().toLowerCase();
			if (ans.equals("y")){
				XtopowerofY(x,y);}
			else{
				YtopowerofX(x,y);}
		}
		else if (ans.equals("f")){
			System.out.println("Take factorial of first number? Y/N");
			ans=in.next().toLowerCase();
			if (ans.equals("y")){
				double z = factorial(x);
				System.out.println(z);}
			else{
				double z = factorial(x);
				System.out.println(z);}
		}
	}
		static void adding(double x, double y){
		double total = x+y;
		System.out.println(total);
		}
		static void subtract(double x, double y){
		double total = x-y;
		System.out.println(total);
		}
		static void subtractYfromX(double x, double y){
		double total = y-x;
		System.out.println(total);
		}
		static void divideXbyY(double x, double y){
		double total = x/y;
		System.out.println(total);
		}
		static void divideYbyX(double x, double y){
		double total = y/x;
		System.out.println(total);
		}
		static void multiply(double x, double y){
		double total = y*x;
		System.out.println(total);
		}
		static void XtopowerofY(double x, double y){
			double total = Math.pow(x, y);
			System.out.println(total);
			}
		static void YtopowerofX(double x, double y){
			double total = Math.pow(y,x);
			System.out.println(total);
			}
	    static double factorial(double x){
	    	int n = x-1;
	        if (x==0||x==1){
	          x = 1;
	        }
	        else{
	          x=x*factorial(n);
	        }
	        return x;
	    }
}
